<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.zipsee.user.model.mapper.UserDongMapper">
	<insert id="insertUserDong" parameterType="com.ssaffy.zipsee.user.model.UserDongDto">
		INSERT INTO USER_DONG
		VALUES(#{userDongId}, #{userId}, #{dongCode})
	</insert>
	
	<select id="getUserInterest" parameterType="String" resultType="com.ssaffy.zipsee.user.model.UserDongDto">
		SELECT *
		FROM USER_DONG UD, DONG D
		WHERE UD.DONG_CODE = D.DONG_CODE
			AND USER_DONG_ID = #{userDongId}
	</select>
	
	<delete id="deleteUserInterest">
		DELETE FROM USER_INTEREST
		WHERE USER_DONG_ID = #{userDongId}
	</delete>
</mapper>